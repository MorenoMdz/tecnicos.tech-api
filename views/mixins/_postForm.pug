mixin postForm(post={}) 
  script(src="https://cdn.ckeditor.com/ckeditor5/11.0.1/classic/ckeditor.js")
  //- form.form-group.p-2(action="/addNewPost" method="POST" id="addNewPost")
    label(for="title") Título da postagem
    input.form-control(type="text" name="title" required)
    label(for="text") Corpo da postagem
    textarea.form-control(type="text" name="text" id="editor" rows="7" required)
    p
    input.form-control.btn.btn-primary(type="submit" value="Salvar")
  form.form-group.p-2(action="/updatePost", method='post')
    input.form-control(type="text" name="id" value=post.id required hidden)

    label(for="title") Título da postagem
    input.form-control(type="text" name="title" value=post.title required)

    label(for="text") Corpo da postagem
    textarea#editor.form-control(type="text" name='text')=post.text
    p
    input.form-control.btn.btn-primary(type="submit" value="Salvar")


  script.
    ClassicEditor
      .create( document.querySelector( '#editor' ) )
      .catch( error => {
          console.error( error );
      } );
